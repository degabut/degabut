{
  "compilerOptions": {
    "strict": true,
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictBindCallApply": false,
    "forceConsistentCasingInFileNames": false,
    "noFallthroughCasesInSwitch": false,
    "useDefineForClassFields": true,
    "paths": {
      "@api": ["./src/apps/api"],
      "@api/*": ["./src/apps/api/*"],
      "@youtube-api": ["./src/apps/youtube-api"],
      "@youtube-api/*": ["./src/apps/youtube-api/*"],
      "@main": ["./src/apps/main"],
      "@main/*": ["./src/apps/main/*"],
      "@events": ["./src/apps/events"],
      "@events/*": ["./src/apps/events/*"],
      "@common": ["./src/common"],
      "@common/*": ["./src/common/*"],
      "@auth": ["./src/modules/auth"],
      "@auth/*": ["./src/modules/auth/*"],
      "@apps": ["./src/modules/apps"],
      "@apps/*": ["./src/modules/apps/*"],
      "@database": ["./src/modules/database"],
      "@database/*": ["./src/modules/database/*"],
      "@health": ["./src/modules/health"],
      "@health/*": ["./src/modules/health/*"],
      "@history": ["./src/modules/history"],
      "@history/*": ["./src/modules/history/*"],
      "@logger": ["./src/modules/logger"],
      "@logger/*": ["./src/modules/logger/*"],
      "@playlist": ["./src/modules/playlist"],
      "@playlist/*": ["./src/modules/playlist/*"],
      "@queue": ["./src/modules/queue"],
      "@queue/*": ["./src/modules/queue/*"],
      "@queue-player": ["./src/modules/queue-player"],
      "@queue-player/*": ["./src/modules/queue-player/*"],
      "@media-source": ["./src/modules/media-source"],
      "@media-source/*": ["./src/modules/media-source/*"],
      "@spotify": ["./src/modules/spotify"],
      "@spotify/*": ["./src/modules/spotify/*"],
      "@user": ["./src/modules/user"],
      "@user/*": ["./src/modules/user/*"],
      "@youtube": ["./src/modules/youtube"],
      "@youtube/*": ["./src/modules/youtube/*"]
    }
  }
}
