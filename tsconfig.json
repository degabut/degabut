{
	"compilerOptions": {
		"target": "ESNext",
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"module": "CommonJS",
		"rootDir": "./src",
		"baseUrl": "./src",
		"moduleResolution": "node",
		"paths": {
			"@modules/discord/*": ["./modules/discord/*"],
			"@modules/queue/*": ["./modules/queue/*"],
			"@modules/lyric/*": ["./modules/lyric/*"],
			"@modules/youtube/*": ["./modules/youtube/*"],
			"@core": ["./core"],
			"@utils": ["./utils"]
		},
		"outDir": "./dist",
		"downlevelIteration": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": false
	},
	"include": ["./src"],
	"exclude": ["**/*.spec.ts"]
}
